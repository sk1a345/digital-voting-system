<%- include('../partials/header', { title: "Add Candidate" }) %>

<main class="content">

  <div class="auth-container">
    <h2>Add New Candidate</h2>
    <p class="auth-subtitle">Fill the details below</p>

    <form 
      action="/admin/candidates/add" 
      method="POST" 
      enctype="multipart/form-data"
      class="auth-form"
    >

      <!-- Candidate Name -->
      <div class="form-group">
        <label for="name">Candidate Name</label>
        <input type="text" id="name" name="name" required placeholder="Enter name">
      </div>

      <!-- Party Name -->
      <div class="form-group">
        <label for="party">Party Name</label>
        <input type="text" id="party" name="party" required placeholder="Enter Party Name">
      </div>

      <!-- Party Symbol Upload -->
      <div class="form-group">
        <label for="partySymbol">Party Symbol (Image)</label>
        <input 
          type="file" 
          id="partySymbol" 
          name="partySymbol" 
          accept="image/*" 
          required
        >
      </div>

      <!-- Candidate Photo Upload -->
      <div class="form-group">
        <label for="photo">Candidate Photo</label>
        <input 
          type="file" 
          id="photo" 
          name="photo" 
          accept="image/*" 
          required
        >
      </div>

      <button type="submit" class="btn-primary">Add Candidate</button>

      <p class="switch-link">
        <a href="/admin/dashboard">â¬… Back to Dashboard</a>
      </p>

    </form>
  </div>

</main>

<%- include('../partials/footer') %>
